<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head.ejs") %>

  <body class="bg-gray-50 relative">
    <%- include('partials/navbar') %>

    <main class="max-w-4xl mx-auto p-6 my-10">
      <section class="bg-white rounded-lg h-[70vh] shadow-md p-8">
        <div class="blogs content">
          <h1 class="text-3xl font-bold text-primary mb-8">All Blogs</h1>

          <!-- Search Bar -->
          <input
            type="text"
            id="searchInput"
            placeholder="Search blogs..."
            class="mb-6 px-4 py-2 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-primary"
          />

          <div class="flex flex-col gap-6">
            <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
            <a
              class="relative single blog-card block p-6 border border-gray-200 rounded-lg hover:shadow-lg transition-all duration-300 hover:border-blue-200 bg-white"
              href="/blogs/<%= blog._id %>"
            >
              <div class="flex justify-between items-start">
                <div>
                  <h3
                    class="title text-xl font-bold text-gray-800 hover:text-blue-600 transition-colors"
                  >
                    <%= blog.title %>
                  </h3>
                  <p class="snippet text-gray-600 mt-2"><%= blog.snippet %></p>
                </div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gray-400"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </div>
              <div class="mt-4 text-sm text-gray-500">
                <span
                  class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs"
                  >Blog Post</span
                >
              </div>
            </a>
            <% }) %> <% } else { %>
            <div class="text-center py-10">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-12 w-12 mx-auto text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <p class="mt-4 text-gray-500">There are no blogs to display...</p>
              <a
                href="/blogs/create"
                class="mt-4 inline-block px-4 py-2 hover:bg-primary text-white rounded-md bg-secondary transition-colors"
              >
                Create your first blog
              </a>
            </div>
            <% } %>
          </div>
        </div>
      </section>
    </main>

    <%- include('partials/footer') %>

    <script>
      const searchInput = document.getElementById("searchInput");
      const blogCards = document.querySelectorAll(".blog-card");

      searchInput.addEventListener("input", (e) => {
        const searchTerm = e.target.value.toLowerCase();

        blogCards.forEach((card) => {
          const title = card.querySelector(".title").textContent.toLowerCase();
          const snippet = card
            .querySelector(".snippet")
            .textContent.toLowerCase();

          const matches =
            title.includes(searchTerm) || snippet.includes(searchTerm);

          card.style.display = matches ? "block" : "none";
        });
      });
    </script>
  </body>
</html>
